{
  "compileOnSave": true,
  "compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"module": "ESNext",
		"target": "es2018",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./build",
		"sourceMap": true
	},
  "include": ["./js/*"],
  "exclude": ["node_modules"]
}
